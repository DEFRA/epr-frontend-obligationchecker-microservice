@{
    ViewData["Title"] = @Localizer["PageNotFound.Title"];
}

<div class="govuk-width-container">
    <main class="govuk-main-wrapper govuk-!-padding-top-4" id="main-content" role="main">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <h1 class="govuk-heading-l govuk-!-margin-bottom-4">
                    @Localizer["PageNotFound.Title"]
                </h1>
                <p class="govuk-body">@Localizer["PageNotFound.YouCannotContinue"]</p>
                <p class="govuk-body">@Localizer["PageNotFound.WeWouldLike"]</p>
                <p class="govuk-body">@Localizer["PageNotFound.PleaseSelect"]</p>
                <a class="govuk-button" data-module="govuk-button" role="button" asp-controller="ObligationChecker" asp-action="RedirectToStart">
                  @Localizer["PageNotFound.GoToTheStart"].Value
                </a>
            </div>
        </div>
    </main>
</div>